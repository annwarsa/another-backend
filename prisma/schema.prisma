generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String
  email     String   @unique
  password  String
  avatar String
}

model Product {
  id           Int      @id @default(autoincrement())
  name         String
  images       String
  weight       Float
  calories     Float
  fat          Float
  proteins     Float
  carbohydrate Float
  sugar        Float
  sodium       Float
  potassium    Float
  last_modified DateTime @updatedAt
  created_at   DateTime @default(now())
}
